  color: red;
}


#JS

const passwordInput = document.getElementById('password');
const strengthText = document.getElementById('strength');
const criteriaElements = {
  length: document.getElementById('length'),
  uppercase: document.getElementById('uppercase'),
  lowercase: document.getElementById('lowercase'),
  number: document.getElementById('number'),
  special: document.getElementById('special')
};

passwordInput.addEventListener('input', () => {
  const password = passwordInput.value;
  let score = 0;

  // Length
  if (password.length >= 8) {
    score++;
    criteriaElements.length.classList.replace('unmet', 'met');
  } else {
    criteriaElements.length.classList.replace('met', 'unmet');
  }

  // Uppercase
  if (/[A-Z]/.test(password)) {
    score++;
    criteriaElements.uppercase.classList.replace('unmet', 'met');
  } else {
    criteriaElements.uppercase.classList.replace('met', 'unmet');
  }

  // Lowercase
  if (/[a-z]/.test(password)) {
    score++;
    criteriaElements.lowercase.classList.replace('unmet', 'met');
  } else {
    criteriaElements.lowercase.classList.replace('met', 'unmet');
  }

  // Number
  if (/\d/.test(password)) {
    score++;
    criteriaElements.number.classList.replace('unmet', 'met');
  } else {
    criteriaElements.number.classList.replace('met', 'unmet');
  }

  // Special character
  if (/[!@#$%^&*(),.?":{}|<>]/.test(password)) {
    score++;
    criteriaElements.special.classList.replace('unmet', 'met');
  } else {
    criteriaElements.special.classList.replace('met', 'unmet');
  }

  // Update strength
  let strength = '';
  if (score === 5) strength = 'Very Strong';
  else if (score === 4) strength = 'Strong';
  else if (score === 3) strength = 'Medium';
  else if (score === 2) strength = 'Weak';
  else strength = 'Very Weak';

  strengthText.textContent = `Strength: ${strength}`;
});
